@model Author
@{
    ViewBag.Title = "Delete Author";
    Layout = "_Layout";
}
<div class="container">
    <h2>Delete Author</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this author?</h4>
        <p>This action cannot be undone.</p>
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
            <p class="card-text">
                <strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("d")<br />
            </p>
        </div>
    </div>
    <form method="post" asp-controller="Author" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>