@model BookViewModel
@{
    ViewBag.Title = "Delete Book";
    Layout = "_Layout";
}
<div class="container">
    <h2>Delete Book</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this book?</h4>
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Book.Title</h5>
            <p class="card-text">
                <strong>Author:</strong> @Model.AuthorName<br />
                <strong>Genre:</strong> @Model.Book.Genre<br />
                <strong>ISBN:</strong> @Model.Book.ISBN<br />
                <strong>Publish Date:</strong> @Model.Book.PublishDate.ToShortDateString()<br />
                <strong>Copies Available:</strong> @Model.Book.CopiesAvailable
            </p>
        </div>
    </div>
    <form method="post" asp-controller="Book" asp-action="Delete">
        <input type="hidden" asp-for="Book.Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>